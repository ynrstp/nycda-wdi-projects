doctype html
html
	head
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", crossorigin="anonymous")
		link(rel='stylesheet', href='/styles/index.css')
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js")
		script(src='/scripts/index.js')
	body
		
		div.container-fluid
			div.row
				div.col-md-12

			div.row
				div.col-md-1
				div.col-md-4
					h1 Lorem Ipsum Generator
					h4 How many words do you need?
						input(type= 'number' id='loremlength' name="number" min=0)
						br
						button(type="button" id='1' name='1') 1
						button(type="button" id='2' name='2') 2
						button(type="button" id='10' name='10') 10
						button(type="button" id='100' name='100') 100
						br
						input(id='generateBtn' type='submit' value='Generate text')
					br
					h4 Add word
					form(action='/addword' method='post')
						input(type= 'text' name="word" placeholder='new word' class='form-control')
						br
						input(id='button' type='submit' value='Add')
					br
					h4 Delete word
					form(action='/deleteword' method='post')
						input(type= 'text' name="word" placeholder='new word' class='form-control')
						br
						input(id='button' type='submit' value='Delete')
					br
					h4 List of words
					ul#wordlist.list-group

					button(type="button" id='empty' name='empty') Clear list
					button(type="button" id='dingetjes' name='dingetjes') Load dingetjes
					button(type="button" id='food' name='food') Load food
					

				div.col-md-7
					h4 Result
					br
					p(id = 'lorem') Lorem Ipsum

